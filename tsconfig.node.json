{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "types": ["@stylex-extend/vue"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "src/**/.ts",
    "src/**/*.vue",
    "./typed-router.d.ts",
    "vite.config.*"
  ],
  "paths": {
    "@/*": ["./src/*"]
  },
  "exclude": ["src/**/__tests__/*", "node_modules", "rspack.config.ts"],
}
